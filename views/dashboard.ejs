<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light p-4">
  <div class="container">
    <h2 class="text-center mb-4">ğŸ‹ï¸â€â™‚ï¸ Health Dashboard</h2>

    <form action="/add" method="POST" class="card p-3 shadow-sm mb-4">
      <div class="row g-2">
        <div class="col"><input type="number" name="water" class="form-control" placeholder="Water (L)" required></div>
        <div class="col"><input type="number" name="sleep" class="form-control" placeholder="Sleep (hrs)" required></div>
        <div class="col"><input type="number" name="meals" class="form-control" placeholder="Meals" required></div>
        <div class="col">
          <select name="mood" class="form-select" required>
            <option value="">Mood</option>
            <option>ğŸ˜Š Happy</option>
            <option>ğŸ˜´ Tired</option>
            <option>ğŸ˜ Neutral</option>
            <option>ğŸ˜” Sad</option>
          </select>
        </div>
        <div class="col"><button class="btn btn-primary w-100">Add Entry</button></div>
      </div>
    </form>

    <h4>Your Logs:</h4>
    <table class="table table-bordered">
      <thead>
        <tr><th>Date</th><th>Water</th><th>Sleep</th><th>Meals</th><th>Mood</th></tr>
      </thead>
      <tbody>
        <% logs.forEach(log => { %>
          <tr>
            <td><%= log.date.toDateString() %></td>
            <td><%= log.water %> L</td>
            <td><%= log.sleep %> hrs</td>
            <td><%= log.meals %></td>
            <td><%= log.mood %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="text-center mt-3">
      <a href="/logout" class="btn btn-danger">Logout</a>
    </div>
  </div>
</body>
</html>
