<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-4">
    <h2 class="text-success text-center mb-3">Welcome, <%= user.name %> ğŸ©º</h2>

    <!-- Health Tracker Form -->
    <form action="/add" method="POST" class="card p-4 shadow-sm mb-4">
      <input type="hidden" name="email" value="<%= user.email %>">
      <div class="row g-3">
        <div class="col-md-3">
          <input type="number" name="water" class="form-control" placeholder="Water (glasses)" required>
        </div>
        <div class="col-md-3">
          <input type="number" name="sleep" class="form-control" placeholder="Sleep (hrs)" required>
        </div>
        <div class="col-md-3">
          <input type="number" name="meals" class="form-control" placeholder="Meals per day" required>
        </div>
        <div class="col-md-3">
          <select name="mood" class="form-select" required>
            <option value="">Mood</option>
            <option>ğŸ˜Š Happy</option>
            <option>ğŸ˜ Neutral</option>
            <option>ğŸ˜” Sad</option>
            <option>ğŸ˜´ Tired</option>
          </select>
        </div>
      </div>
      <button class="btn btn-success w-100 mt-3">Add Entry</button>
    </form>

    <!-- Health History -->
    <div class="card p-4 shadow-sm">
      <h5 class="text-center mb-3">Your Recent Health Logs</h5>
      <% if (logs.length === 0) { %>
        <p class="text-center text-muted">No logs yet. Start tracking!</p>
      <% } else { %>
        <table class="table table-bordered">
          <thead class="table-success">
            <tr>
              <th>Date</th>
              <th>Water</th>
              <th>Sleep</th>
              <th>Meals</th>
              <th>Mood</th>
            </tr>
          </thead>
          <tbody>
            <% logs.forEach(log => { %>
              <tr>
                <td><%= log.date.toDateString() %></td>
                <td><%= log.water %> glasses</td>
                <td><%= log.sleep %> hrs</td>
                <td><%= log.meals %></td>
                <td><%= log.mood %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>

    <div class="text-center mt-4">
      <a href="/login" class="btn btn-danger">Logout</a>
    </div>
  </div>
</body>
</html>
